{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/general.css") }}">
    <link rel="stylesheet" href="{{ asset("css/signup.form.css") }}">
{% endblock %}
{% block javascripts %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% if app.session is not null and app.session.started %}
                {% set errors = app.flashes("error") %}
                {% if errors|length > 0 %}
                    <div class="offset-3 col-6 bg-warning errors">
                        {% for message in errors %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
                {% set notices = app.flashes("notice") %}
                {% if notices|length > 0 %}
                    <div class="offset-3 col-6 bg-info errors">
                        {% for message in notices %}
                            {{ message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            {% endif %}
            <form class="offset-3 col-6 form" method="post">
                <h2>Small Keyring</h2>
                <p>Please fill this form to complete your registration</p>
                {{ form_row(form._token) }}
                <div class="form-group">
                    {{ form_widget(form.nickname) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.passwordConfirm) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.signup, { label: "Sign up" }) }}
                </div>
            </form>
        </div>
    </div>
{% endblock %}